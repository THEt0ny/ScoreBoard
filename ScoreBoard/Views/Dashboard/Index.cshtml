@using ScoreBoard.Models;
@model List<DashboardViewModel>

<div class="container text-center h-100">
    @if (Model.Any())
    {
        <div class="row row-cols-1 justify-content-center row-cols-md-4 gap-8">
            @foreach (DashboardViewModel dashboard in Model)
            {
                <div class="col card m-4">
                    <div class="card-header">
                        <h5 class="card-text">@dashboard.jeu.Nom</h5>
                    </div>
                    <div>
                        <p class="card-text p-1 text-md-center">Score total: @dashboard.jeu.ScoreJoueur</p>
                    </div>
                    <div class="card-footer">
                        <p class="card-text">@dashboard.joueur.Nom</p>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="w-100 mt-5">
            <p>Aucun Jeux</p>
        </div>
    }

</div>
